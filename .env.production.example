# Production Environment Variables Example
# This file shows the structure of required environment variables
# Copy this to .env.production and replace with actual values
# See SECRETS_SETUP.md for detailed instructions

NODE_ENV=production

# Application URLs
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require&pool_max=25
DATABASE_REPLICA_URL=postgresql://readonly:password@replica-host:port/database?sslmode=require

# Redis Cache
REDIS_URL=redis://:password@redis-host:6379
REDIS_CLUSTER_NODES=node1:6379,node2:6379,node3:6379

# Session Configuration
SESSION_SECRET=generate-random-64-char-string
SESSION_NAME=next-trip-session
SESSION_MAX_AGE=604800
SESSION_SECURE=true
SESSION_SAME_SITE=strict
SESSION_HTTP_ONLY=true

# Security
JWT_SECRET=generate-256-bit-secret
JWT_EXPIRY=7d
ENCRYPTION_KEY=generate-32-byte-hex-string
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com; style-src 'self' 'unsafe-inline';"

# Monitoring (Sentry)
NEXT_PUBLIC_SENTRY_DSN=https://key@org.ingest.sentry.io/project
SENTRY_AUTH_TOKEN=sntrys_your_auth_token
SENTRY_ORG=your-org
SENTRY_PROJECT=production
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_API_LOGS=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_MAINTENANCE_MODE=false

# Third-party APIs
WEATHER_API_KEY=your_weather_api_key
MAPS_API_KEY=your_google_maps_key
PAYMENT_API_KEY=sk_live_your_stripe_key
PAYMENT_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@your-domain.com
EMAIL_REPLY_TO=support@your-domain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# CDN
CDN_URL=https://cdn.your-domain.com
IMAGE_CDN_URL=https://images.your-domain.com

# Logging
LOG_LEVEL=error
LOG_FORMAT=json
LOG_ROTATION_MAX_SIZE=100M
LOG_ROTATION_MAX_FILES=30

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
STATIC_CACHE_TTL=31536000

# Backup
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_RETENTION_DAYS=30