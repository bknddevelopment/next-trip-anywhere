{
  "content": [
    "app/**/*.{js,ts,jsx,tsx,mdx}",
    "components/**/*.{js,ts,jsx,tsx}",
    "lib/**/*.{js,ts,jsx,tsx}",
    "lib/data/**/*.ts"
  ],
  "css": ["docs/_next/static/css/**/*.css"],
  "output": "docs/_next/static/css/",
  "safelist": {
    "standard": [
      "html",
      "body",
      "animate-fade-in",
      "animate-fade-up",
      "bg-primary-500",
      "bg-secondary-500",
      "bg-accent-500",
      "text-white",
      "grid-cols-1",
      "grid-cols-2",
      "grid-cols-3",
      "md:grid-cols-2",
      "lg:grid-cols-3"
    ],
    "deep": ["/^animate-/", "/^transition-/", "/^duration-/", "/^ease-/"],
    "greedy": ["/^hover:/", "/^focus:/", "/^active:/", "/^disabled:/", "/^md:/", "/^lg:/", "/^xl:/"]
  },
  "rejected": true,
  "rejectedCss": "reports/rejected-css.css",
  "variables": true,
  "keyframes": true,
  "fontFace": true,
  "blocklist": [
    "*::-webkit-scrollbar-button",
    "*::-webkit-scrollbar-track-piece",
    "*::-webkit-scrollbar-corner",
    "*::-webkit-resizer"
  ],
  "skippedContentGlobs": ["node_modules/**", ".next/**", ".next-build/**"]
}
