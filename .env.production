# Production Environment Variables
NODE_ENV=production

# Application
NEXT_PUBLIC_APP_URL=https://next-trip-anywhere.com
NEXT_PUBLIC_API_URL=https://api.next-trip-anywhere.com

# Database (production database with connection pooling)
DATABASE_URL=postgresql://nexttrip:prod_password_placeholder@db.next-trip-anywhere.com:5432/nexttrip_prod?sslmode=require&pool_max=25
DATABASE_REPLICA_URL=postgresql://nexttrip:prod_password_placeholder@db-replica.next-trip-anywhere.com:5432/nexttrip_prod?sslmode=require

# Redis Cluster
REDIS_URL=redis://:redis_password_placeholder@redis.next-trip-anywhere.com:6379
REDIS_CLUSTER_NODES=redis-node1:6379,redis-node2:6379,redis-node3:6379

# Session
SESSION_SECRET=session_secret_placeholder_change_in_production
SESSION_NAME=next-trip-session
SESSION_MAX_AGE=604800
SESSION_SECURE=true
SESSION_SAME_SITE=strict
SESSION_HTTP_ONLY=true

# Security
JWT_SECRET=jwt_secret_placeholder_change_in_production
JWT_EXPIRY=7d
ENCRYPTION_KEY=encryption_key_placeholder_change_in_production
CORS_ORIGIN=https://next-trip-anywhere.com,https://www.next-trip-anywhere.com
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com; style-src 'self' 'unsafe-inline';"

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://placeholder@sentry.io/placeholder
SENTRY_AUTH_TOKEN=sentry_auth_token_placeholder
SENTRY_ORG=next-trip-anywhere
SENTRY_PROJECT=production
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-PLACEHOLDER
NEXT_PUBLIC_GTM_ID=GTM-PLACEHOLDER

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_API_LOGS=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_MAINTENANCE_MODE=false

# Third-party APIs
WEATHER_API_KEY=weather_api_key_placeholder
MAPS_API_KEY=maps_api_key_placeholder
PAYMENT_API_KEY=payment_api_key_placeholder
PAYMENT_WEBHOOK_SECRET=payment_webhook_secret_placeholder

# Email (production email service)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=smtp_password_placeholder
EMAIL_FROM=noreply@next-trip-anywhere.com
EMAIL_REPLY_TO=support@next-trip-anywhere.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# CDN
CDN_URL=https://cdn.next-trip-anywhere.com
IMAGE_CDN_URL=https://images.next-trip-anywhere.com

# Logging
LOG_LEVEL=error
LOG_FORMAT=json
LOG_ROTATION_MAX_SIZE=100M
LOG_ROTATION_MAX_FILES=30

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
STATIC_CACHE_TTL=31536000

# Backup
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=next-trip-backups
BACKUP_RETENTION_DAYS=30