# Production Environment Variables
# CRITICAL: Replace all example values with actual production credentials
# See SECRETS_SETUP.md for detailed instructions on obtaining each value
NODE_ENV=production

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Public-facing application URL (update with your actual domain)
NEXT_PUBLIC_APP_URL=https://next-trip-anywhere.com
# API endpoint URL (update with your actual API domain)
NEXT_PUBLIC_API_URL=https://api.next-trip-anywhere.com

# ===========================================
# DATABASE CONFIGURATION (CRITICAL)
# ===========================================
# Primary PostgreSQL connection with connection pooling
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?sslmode=require&pool_max=25
# MUST REPLACE: Get from your PostgreSQL provider (Supabase, Neon, Railway, etc.)
DATABASE_URL=postgresql://nexttrip_prod:REPLACE_WITH_SECURE_PASSWORD@db.example.com:5432/nexttrip_production?sslmode=require&pool_max=25

# Read-only replica for load distribution (OPTIONAL)
# MUST REPLACE: Set up database replication and use replica endpoint
DATABASE_REPLICA_URL=postgresql://nexttrip_readonly:REPLACE_WITH_READONLY_PASSWORD@db-replica.example.com:5432/nexttrip_production?sslmode=require

# ===========================================
# REDIS CONFIGURATION (HIGH PRIORITY)
# ===========================================
# Redis for caching and session storage
# Format: redis://:[password]@[host]:[port]
# MUST REPLACE: Get from Redis provider (Redis Cloud, Upstash, ElastiCache)
REDIS_URL=redis://:REPLACE_WITH_REDIS_PASSWORD@redis.example.com:6379
# Cluster nodes for high availability (optional)
REDIS_CLUSTER_NODES=redis-node1:6379,redis-node2:6379,redis-node3:6379

# ===========================================
# SESSION MANAGEMENT (CRITICAL)
# ===========================================
# Session secret for signing cookies - Generate with: openssl rand -hex 32
# MUST REPLACE: Never use default value in production
SESSION_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING_USE_OPENSSL_RAND_HEX_32
SESSION_NAME=next-trip-session
SESSION_MAX_AGE=604800
SESSION_SECURE=true
SESSION_SAME_SITE=strict
SESSION_HTTP_ONLY=true

# ===========================================
# SECURITY & AUTHENTICATION (CRITICAL)
# ===========================================
# JWT secret for token signing - Generate with: openssl rand -hex 64
# MUST REPLACE: Critical for authentication security
JWT_SECRET=REPLACE_WITH_256_BIT_SECRET_USE_OPENSSL_RAND_HEX_64
JWT_EXPIRY=7d

# Encryption key for sensitive data - Generate with: openssl rand -hex 32
# MUST REPLACE: Used for AES-256 encryption
ENCRYPTION_KEY=REPLACE_WITH_32_BYTE_HEX_STRING_USE_OPENSSL_RAND_HEX_32

# CORS configuration - Update with your actual domains
CORS_ORIGIN=https://next-trip-anywhere.com,https://www.next-trip-anywhere.com

# Content Security Policy
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com; style-src 'self' 'unsafe-inline';"

# ===========================================
# MONITORING & ERROR TRACKING (MEDIUM PRIORITY)
# ===========================================
# Sentry error tracking - Get from sentry.io project settings
# Format: https://[public_key]@[organization].ingest.sentry.io/[project_id]
# MUST REPLACE: Create project at sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://00000000000000000000000000000000@o0000000.ingest.sentry.io/0000000

# Sentry authentication token for releases - Get from Sentry Auth Tokens
# MUST REPLACE: Generate token with project:write scope
SENTRY_AUTH_TOKEN=sntrys_REPLACE_WITH_ACTUAL_SENTRY_AUTH_TOKEN
SENTRY_ORG=next-trip-anywhere
SENTRY_PROJECT=production
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ===========================================
# ANALYTICS (MEDIUM PRIORITY)
# ===========================================
# Google Analytics 4 - Get from GA4 property settings
# Format: G-XXXXXXXXXX
# MUST REPLACE: Create GA4 property
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-V30V2B5DMD

# Google Tag Manager - Get from GTM container
# Format: GTM-XXXXXXX
# MUST REPLACE: Create GTM container
NEXT_PUBLIC_GTM_ID=GTM-0000000

# Google Search Console Verification
# Verified via google9de1b0284bbffacf.html file
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=9de1b0284bbffacf

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_DEBUG_MODE=false
ENABLE_API_LOGS=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_MAINTENANCE_MODE=false

# ===========================================
# THIRD-PARTY API INTEGRATIONS (HIGH PRIORITY)
# ===========================================
# n8n Webhook for Contact Form - Your actual n8n form endpoint
# This is the webhook endpoint for your travel quote form
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://nextripanywhere.app.n8n.cloud/form/travel-quote-form

# Weather API - Get from OpenWeatherMap or similar provider
# MUST REPLACE: Sign up for weather API service
WEATHER_API_KEY=REPLACE_WITH_WEATHER_API_KEY

# Google Maps API - Get from Google Cloud Console
# MUST REPLACE: Enable Maps API and create restricted key
MAPS_API_KEY=REPLACE_WITH_GOOGLE_MAPS_API_KEY

# Payment processing - Get from Stripe Dashboard
# MUST REPLACE: Use live keys from payment provider
PAYMENT_API_KEY=sk_live_YOUR_STRIPE_SECRET_KEY_HERE

# Payment webhook verification - Get from Stripe webhook settings
# MUST REPLACE: Create webhook endpoint and get signing secret
PAYMENT_WEBHOOK_SECRET=whsec_REPLACE_WITH_WEBHOOK_SIGNING_SECRET

# ===========================================
# EMAIL SERVICE (HIGH PRIORITY)
# ===========================================
# SendGrid configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
# SendGrid API key - Get from SendGrid API Keys
# MUST REPLACE: Generate API key with Mail Send permission
SMTP_PASS=SG.REPLACE_WITH_SENDGRID_API_KEY
EMAIL_FROM=noreply@next-trip-anywhere.com
EMAIL_REPLY_TO=support@next-trip-anywhere.com

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# ===========================================
# CDN CONFIGURATION
# ===========================================
# Update with your actual CDN domains
CDN_URL=https://cdn.next-trip-anywhere.com
IMAGE_CDN_URL=https://images.next-trip-anywhere.com

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=error
LOG_FORMAT=json
LOG_ROTATION_MAX_SIZE=100M
LOG_ROTATION_MAX_FILES=30

# ===========================================
# PERFORMANCE
# ===========================================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
STATIC_CACHE_TTL=31536000

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=next-trip-backups
BACKUP_RETENTION_DAYS=30