# Staging Environment Variables
NODE_ENV=staging

# Application
NEXT_PUBLIC_APP_URL=https://staging.next-trip-anywhere.com
NEXT_PUBLIC_API_URL=https://staging.next-trip-anywhere.com/api

# Database (staging database)
DATABASE_URL=postgresql://nexttrip:${DB_PASSWORD}@db-staging.next-trip-anywhere.com:5432/nexttrip_staging

# Redis (staging instance)
REDIS_URL=redis://:${REDIS_PASSWORD}@redis-staging.next-trip-anywhere.com:6379

# Session
SESSION_SECRET=${SESSION_SECRET}
SESSION_NAME=next-trip-session
SESSION_MAX_AGE=86400
SESSION_SECURE=true
SESSION_SAME_SITE=lax

# Security
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
CORS_ORIGIN=https://staging.next-trip-anywhere.com

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=${SENTRY_DSN}
SENTRY_AUTH_TOKEN=${SENTRY_AUTH_TOKEN}
SENTRY_ORG=${SENTRY_ORG}
SENTRY_PROJECT=${SENTRY_PROJECT}
SENTRY_ENVIRONMENT=staging

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=${GA_MEASUREMENT_ID}

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_API_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true

# Third-party APIs
WEATHER_API_KEY=${WEATHER_API_KEY}
MAPS_API_KEY=${MAPS_API_KEY}
PAYMENT_API_KEY=${PAYMENT_API_KEY_STAGING}

# Email (staging email service)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=noreply@staging.next-trip-anywhere.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CDN
CDN_URL=https://cdn-staging.next-trip-anywhere.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json