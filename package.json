{
  "name": "next-trip-anywhere",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:css && next build && npm run build:postprocess",
    "build:css": "echo 'ðŸŽ¨ CSS Optimization enabled via PostCSS'",
    "build:postprocess": "rm -rf docs && cp -r .next-build docs && cp -r public/* docs/ && node scripts/fix-image-paths.js && npm run analyze-bundle && npm run extract-critical-css",
    "build:analyze": "ANALYZE=true npm run build",
    "build:production": "npm run clean && npm run build",
    "build:debug-css": "DEBUG_CSS=true npm run build",
    "extract-critical-css": "node scripts/extract-critical-css.js",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky",
    "perf:lighthouse": "npx lighthouse https://localhost:3000 --view",
    "perf:bundle-size": "npx size-limit",
    "perf:css-report": "node scripts/extract-critical-css.js",
    "analyze-bundle": "node scripts/analyze-bundle.js",
    "analyze-bundle:json": "node scripts/analyze-bundle.js && cat reports/bundle-analysis.json",
    "clean": "rm -rf .next .next-build node_modules/.cache reports lib/critical-css/*.css public/css/*.css"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.1",
    "@tanstack/react-query": "^5.67.2",
    "@types/uuid": "^10.0.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.540.0",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-gtm-module": "^2.0.11",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^12.0.0",
    "web-vitals": "^5.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "22.18.6",
    "@types/react": "19.1.13",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.23",
    "cssnano": "^7.1.1",
    "cssnano-preset-default": "^7.0.9",
    "eslint": "^9.20.0",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.22.0",
    "purgecss": "^7.0.2",
    "sharp": "^0.34.3",
    "typescript": "5.9.2",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
