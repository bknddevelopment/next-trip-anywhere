# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1
API_PREFIX=/api

# Database
MONGODB_URI=mongodb://localhost:27017/next_trip_anywhere
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# API Keys - Third Party Services
AMADEUS_CLIENT_ID=your-amadeus-client-id
AMADEUS_CLIENT_SECRET=your-amadeus-client-secret
AMADEUS_API_URL=https://test.api.amadeus.com

SABRE_CLIENT_ID=your-sabre-client-id
SABRE_CLIENT_SECRET=your-sabre-client-secret
SABRE_API_URL=https://api.sabre.com

BOOKING_COM_API_KEY=your-booking-com-api-key
BOOKING_COM_API_URL=https://api.booking.com

EXPEDIA_API_KEY=your-expedia-api-key
EXPEDIA_API_URL=https://api.expedia.com

# Payment Gateway
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@nexttripanywhere.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Webhook URLs
WEBHOOK_URL=https://api.nexttripanywhere.com/webhooks
WEBHOOK_SECRET=your-webhook-secret

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache TTL (seconds)
CACHE_TTL_SEARCH=300
CACHE_TTL_BOOKING=3600
CACHE_TTL_USER=1800