# Next Trip Anywhere - Environment Variables
# Copy this file to .env.local and update with your values

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=https://nexttripanywhere.com
NEXT_PUBLIC_BASE_PATH=

# ==========================================
# FORM HANDLING
# ==========================================
# Formspree - Sign up at https://formspree.io to get your form ID
NEXT_PUBLIC_FORMSPREE_ID=your_formspree_form_id

# ==========================================
# ANALYTICS & MONITORING (Optional)
# ==========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=XXXXXXX
NEXT_PUBLIC_HOTJAR_SV=X

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# EXTERNAL SERVICES (Optional)
# ==========================================
# Google Maps (for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==========================================
# FEATURE FLAGS
# ==========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false