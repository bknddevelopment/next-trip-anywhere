# Next Trip Anywhere - Environment Variables Template
# Copy this file to .env.local for development or use environment-specific files

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Environment: development | staging | production
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_BASE_PATH=

# ==========================================
# DATABASE
# ==========================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/dbname?sslmode=require
# Read replica for production (optional)
DATABASE_REPLICA_URL=

# ==========================================
# CACHING
# ==========================================
# Redis connection string
REDIS_URL=redis://localhost:6379
# Redis cluster nodes (comma-separated for production)
REDIS_CLUSTER_NODES=

# ==========================================
# SESSION MANAGEMENT
# ==========================================
# Generate secure random strings for production
SESSION_SECRET=your-session-secret-min-32-chars
SESSION_NAME=next-trip-session
SESSION_MAX_AGE=86400
SESSION_SECURE=false
SESSION_SAME_SITE=lax
SESSION_HTTP_ONLY=true

# ==========================================
# SECURITY
# ==========================================
# JWT Configuration
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=your-encryption-key-min-32-chars

# CORS
CORS_ORIGIN=http://localhost:3000

# Content Security Policy
CSP_POLICY="default-src 'self';"

# ==========================================
# MONITORING & ANALYTICS
# ==========================================
# Sentry Error Tracking - https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# Google Analytics 4 - https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager - https://tagmanager.google.com
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Search Console - https://search.google.com/search-console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Ads Conversion Tracking - https://ads.google.com
NEXT_PUBLIC_GOOGLE_ADS_ID=AW-XXXXXXXXX
NEXT_PUBLIC_LEAD_CONVERSION_ID=AW-XXXXXXXXX/XXXXXXXXXXXXXXXXX
NEXT_PUBLIC_PHONE_CONVERSION_ID=AW-XXXXXXXXX/YYYYYYYYYYYYYYYYY  
NEXT_PUBLIC_EMAIL_CONVERSION_ID=AW-XXXXXXXXX/ZZZZZZZZZZZZZZZZZ
NEXT_PUBLIC_FORM_CONVERSION_ID=AW-XXXXXXXXX/AAAAAAAAAAAAAAAAAA
NEXT_PUBLIC_BOOKING_CONVERSION_ID=AW-XXXXXXXXX/BBBBBBBBBBBBBBBBB

# Facebook Pixel - https://business.facebook.com (optional)
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=000000000000000

# Microsoft Clarity - https://clarity.microsoft.com (optional)
NEXT_PUBLIC_CLARITY_ID=xxxxxxxxxx

# Hotjar - https://hotjar.com (optional)
NEXT_PUBLIC_HOTJAR_ID=XXXXXXX
NEXT_PUBLIC_HOTJAR_SV=X

# Analytics Dashboard API Keys (for server-side data fetching)
GOOGLE_ANALYTICS_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_ANALYTICS_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_ANALYTICS_REFRESH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_SEARCH_CONSOLE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==========================================
# EXTERNAL SERVICES
# ==========================================
# Form Handling - https://formspree.io
NEXT_PUBLIC_FORMSPREE_ID=your_formspree_form_id

# n8n Webhook for Contact Form - https://n8n.io
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://n8n.nexttripanywhere.com/webhook/contact-form

# Google Maps - https://console.cloud.google.com
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Weather API - https://openweathermap.org/api
WEATHER_API_KEY=

# Payment Processing (Stripe, PayPal, etc.)
PAYMENT_API_KEY=
PAYMENT_WEBHOOK_SECRET=

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
# SMTP Settings
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@next-trip-anywhere.com
EMAIL_REPLY_TO=support@next-trip-anywhere.com

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# ==========================================
# CDN & ASSETS
# ==========================================
CDN_URL=
IMAGE_CDN_URL=

# ==========================================
# LOGGING
# ==========================================
# Log levels: error | warn | info | debug | trace
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ROTATION_MAX_SIZE=100M
LOG_ROTATION_MAX_FILES=30

# ==========================================
# PERFORMANCE
# ==========================================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
STATIC_CACHE_TTL=31536000

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_DEBUG_MODE=false
ENABLE_API_LOGS=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ERROR_REPORTING=false
ENABLE_MAINTENANCE_MODE=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false
NEXT_PUBLIC_ESSEX_COUNTY_EXPANSION_ENABLED=false

# ==========================================
# BACKUP & DISASTER RECOVERY
# ==========================================
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=
BACKUP_RETENTION_DAYS=30

# ==========================================
# DOCKER & DEPLOYMENT
# ==========================================
# Container Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE=next-trip-anywhere

# Kubernetes Namespace
K8S_NAMESPACE=production

# ==========================================
# CI/CD SECRETS (GitHub Actions)
# ==========================================
# These are typically set in GitHub Secrets
# GITHUB_TOKEN=
# CODECOV_TOKEN=
# SNYK_TOKEN=
# FOSSA_API_KEY=
# SLACK_WEBHOOK=