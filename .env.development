# Development Environment Variables
NODE_ENV=development

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database
DATABASE_URL=postgresql://nexttrip:devpassword@localhost:5432/nexttrip_dev

# Redis
REDIS_URL=redis://localhost:6379

# Session
SESSION_SECRET=dev-secret-change-in-production
SESSION_NAME=next-trip-session
SESSION_MAX_AGE=86400

# Security
JWT_SECRET=dev-jwt-secret-change-in-production
ENCRYPTION_KEY=dev-encryption-key-change-in-production

# Monitoring (optional in dev)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Analytics (optional in dev)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Google Search Console Verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=9de1b0284bbffacf

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_API_LOGS=true
ENABLE_PERFORMANCE_MONITORING=false

# Third-party APIs (add as needed)
WEATHER_API_KEY=
MAPS_API_KEY=
PAYMENT_API_KEY=

# n8n Webhook for Contact Form - Use local or test instance for development
# Example: http://localhost:5678/webhook/contact-form or ngrok tunnel
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://nextripanywhere.app.n8n.cloud/form/travel-quote-form

# Email (for development, use a service like Mailtrap)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@next-trip-anywhere.local

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100