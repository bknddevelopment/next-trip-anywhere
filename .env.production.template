# Production Environment Variables Template
# Copy this file to .env.production.local and fill in actual values
# DO NOT commit .env.production.local to version control

# ==========================================
# REQUIRED - Application will not function without these
# ==========================================

NODE_ENV=production

# Application URLs
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# ==========================================
# CRITICAL SECURITY - Generate unique values for production
# ==========================================

# Generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING

# ==========================================
# THIRD-PARTY SERVICES - Get from service providers
# ==========================================

# Google Analytics (https://analytics.google.com)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager (https://tagmanager.google.com)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Sentry Error Tracking (https://sentry.io)
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_AUTH_TOKEN=
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# ==========================================
# OPTIONAL - Enhanced functionality
# ==========================================

# Database (if backend is added)
DATABASE_URL=postgresql://user:pass@host:5432/dbname?sslmode=require

# Redis Cache (if caching is needed)
REDIS_URL=redis://:password@host:6379

# Email Service (SendGrid, AWS SES, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=
EMAIL_FROM=noreply@your-domain.com

# Payment Processing (Stripe, PayPal, etc.)
PAYMENT_API_KEY=
PAYMENT_WEBHOOK_SECRET=

# External APIs
WEATHER_API_KEY=
MAPS_API_KEY=

# ==========================================
# FEATURE FLAGS
# ==========================================

ENABLE_DEBUG_MODE=false
ENABLE_API_LOGS=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_MAINTENANCE_MODE=false

# ==========================================
# PERFORMANCE & OPTIMIZATION
# ==========================================

ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
STATIC_CACHE_TTL=31536000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CDN & ASSETS
# ==========================================

CDN_URL=https://cdn.your-domain.com
IMAGE_CDN_URL=https://images.your-domain.com

# ==========================================
# LOGGING & MONITORING
# ==========================================

LOG_LEVEL=error
LOG_FORMAT=json
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ==========================================
# SECURITY HEADERS (for server deployments)
# ==========================================

CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com; style-src 'self' 'unsafe-inline';"

# ==========================================
# GITHUB PAGES SPECIFIC (if using GitHub Pages)
# ==========================================

# Leave empty for root domain, or set to /repository-name for project pages
NEXT_PUBLIC_BASE_PATH=

# ==========================================
# NOTES FOR DEPLOYMENT
# ==========================================

# 1. Never commit this file with real values
# 2. Use GitHub Secrets for GitHub Actions deployments
# 3. Rotate secrets regularly (every 90 days recommended)
# 4. Use different values for staging and production
# 5. Monitor for exposed secrets in logs
# 6. Use secret scanning tools before deployment

# For GitHub Actions, add these as repository secrets:
# - Go to Settings > Secrets and variables > Actions
# - Add each variable as a new secret
# - Reference in workflows as ${{ secrets.VARIABLE_NAME }}